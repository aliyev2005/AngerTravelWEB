@model AboutVm
<!-- START SECTION BANNER -->
<section class="breadcrumb_section overlay_bg2 page-title-light parallax_bg" data-parallax-bg-image="images/about_bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="page-title animation" data-animation="fadeInUp" data-animation-delay="0.1s">
                    <h1>About Us</h1>
                </div>
                <nav aria-label="breadcrumb" class="animation" data-animation="fadeInUp" data-animation-delay="0.4s">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">About</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- END SECTION BANNER -->
<!-- START SECTION ABOUT US -->
<section>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12 col-sm-12 animation" data-animation="fadeInLeft" data-animation-delay="0.1s">
                <div class="mb-4 mb-lg-0">
                    <img class="w-100" src="~/images/@Model.about.Image" alt="about_img" />
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12 animation" data-animation="fadeInRight" data-animation-delay="0.1s">
                <div class="heading_s3 mb-md-4">
                    <h2>@Model.about.Title</h2>
                </div>
                <p>@Model.about.Description</p>
            </div>
        </div>
    </div>
</section>
<!-- END SECTION ABOUT US -->
<!-- START SECTION CALL TO ACTION -->
<section class="overlay_bg3 parallax_bg" data-parallax-bg-image="images/counter_bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text_white text-center">
                <div class="heading_s3 heading_light mb-md-4 animation" data-animation="fadeInUp" data-animation-delay="0.1s">
                    <h2>Get 10% Discount Any Tour Package</h2>
                </div>
                <p class="animation" data-animation="fadeInUp" data-animation-delay="0.1s"> Travel between 22 April to 21 May and get existing offers.</p>
                <a href="#" class="btn btn-default mt-2 animation" data-animation="fadeInUp" data-animation-delay="0.1s"> Book Now</a>
            </div>
        </div>
    </div>
</section>
<!-- END SECTION CALL TO ACTION -->
<!-- START SECTION ABOUT US -->
<section>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12 col-sm-12 animation" data-animation="fadeInLeft" data-animation-delay="0.1s">
                <div class="mb-4 mb-lg-0 fancy_style3">
                    <div class="overlay_bg position-relative">
                        <img src="~/images/@Model.choose.Image" alt="why_img" />
                        <a href="@Model.choose.VideoLink" class="video_popup video_play"><img class="bounce_img" src="../assets/images/play-icon.png" alt="play-icon"></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12 animation" data-animation="fadeInRight" data-animation-delay="0.1s">
                <div class="heading_s3 mb-md-4">
                    <h2>@Model.choose.Title</h2>
                </div>
                <p>@Model.choose.Description</p>
                <div class="row mb-4">
                    <div class="col-sm-6">
                        <div class="list_style_4">
                            <ul>
                                <li>Best Places For Best Price</li>
                                <li>Cultural & Theater Tours</li>
                                <li>World Best Services</li>
                                <li>Wild & Adventure Tours</li>
                                <li>Private Guide Tours</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="list_style_4">
                            <ul>
                                <li>World Best Services</li>
                                <li>Private Guide Tours</li>
                                <li>Holiday & Seasonal Tours</li>
                                <li>Best Places For Best Price</li>
                                <li>Cultural & Theater Tours</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <a href="#" class="btn btn-outline-default">Read More</a>
            </div>
        </div>
    </div>
</section>
<!-- END SECTION ABOUT US -->
<!-- START SECTION CLIENT LOGO -->
<section class="light_gray_bg">
    <div class="container">
        <div class="row">
            <div class="col-md-12 animation" data-animation="fadeInUp" data-animation-delay="0.1s">
                <div class="cl_logo_slider owl-carousel owl-theme" data-margin="30" data-loop="true" data-autoplay="true" data-dots="false" data-autoplay-timeout="2000">
                   @foreach(var partner in Model.part)
                    {
                        <div class="item">
                            <a href="@partner.Link"><img src="../assets/images/@partner.Logo" alt="cl_logo1" /></a>
                        </div>
                    }
                    
                    
                </div>
            </div>
        </div>
    </div>
</section>
<!-- START SECTION CLIENT LOGO -->
<!-- START SECTION TESTIMONIAL -->
<section>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="small_padding bg-dark text_white animation" data-animation="fadeInLeft" data-animation-delay="0.1s">
                    <div class="heading_s3 heading_light mb-md-4 text-center">
                        <h2>Clients Feedback</h2>
                    </div>
                    <div class="testimonial_slider testimonial_style5 carousel_slide1 owl-carousel owl-theme" data-margin="30" data-loop="true" data-autoHeight="true" data-autoplay="true">
                        @foreach(var feedback in Model.feedbacks)
                        {
                            <div class="item">
                            <div class="testimonial_box">
                                <div class="testimonial_img">
                                    <img class="rounded-circle m-auto" src="../assets/images/@feedback.Image" alt="user">
                                </div>
                                <div class="testi_meta">
                                    <h6>@feedback.Name</h6>
                                    <span>@feedback.Position</span>
                                    <p>@feedback.Content</p>
                                </div>
                            </div>
                        </div>
                        }
                        
                        
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="fancy_style2 animation" data-animation="fadeInRight" data-animation-delay="0.1s">
                    <img src="images/testimonial_img.jpg" alt="testimonial_img">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END SECTION TESTIMONIAL -->
